modelo Reserva:
    contrutor(nome, hotel, quarto, preco, data_entrada, data_saida)
        Reserva.nome = nome
        Reserva.hotel = hotel
        Reserva.quarto = quarto
        Reserva.preco = preco
        Reserva.data_entrada = data_entrada
        Reserva.data_saida = data_saida
    

