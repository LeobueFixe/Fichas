funcao mostrarHoteis(Hoteis):
    imprime("=== LISTA DE HOTÉIS ===")

    cada nome_hotel, dados_hotel em Hoteis.dicionario:
        imprime("Hotel: {nome_hotel}")
        imprime("  Check-in disponível entre {dados_hotel['check_in']}")
        imprime("  Check-out disponível entre {dados_hotel['check_out']}")
        imprime("  Quartos:")

        cada nome_quarto, detalhes_quarto em dados_hotel["quartos"]:
            imprime("    {nome_quarto}:")
            imprime("        Tipo: {detalhes_quarto['tipo']}")
            imprime("        Preço por noite: {detalhes_quarto['preco_noite']}€")
            
            se detalhes_quarto["disponivel"] == True:
                imprime("        Disponível: Sim")
            senao:
                imprime("        Disponível: Não")

        imprime(" ")

