entrada("Insere uma palavra ou uma sequencia de numeros:", palavra)
quantidade = tamanho(palavra)

contadorPositivo = 0
contadorNegativo = -1
diferentes = 0
iguais = 0

enquanto contadorPositivo < quantidade:
    se sequencia[contadorPositivo] == sequencia[contadorNegativo]:
        iguais++
    senao:
        diferentes++

    contadorPositivo++
    contadorNegativo--
    
se diferentes == 0:
    imprime("É um palíndromo.")
senao:
    imprime("Não é um palíndromo.")
