entrada("Insira um número inteiro:", numero)

contador = 1
total = 0

se numero NÃO INT:
    imprime("Tente novamente.")
senao:

    enquanto contador < numero:
        se numero%i == 0:
            total = total + contador
        contador++

    se total == numero:
        imprime("É um número perfeito.")
    senao:
        imprime("Não é um número perfeito.")
